<div class="container">
	<div class= "row" >
		<div class="col-xs-3">
			<% if flash[:info] %>
				<p><%= flash[:info] %></p>
			<% else flash[:notice] %>
				<p><%= flash[:notice] %></p>
			<% end %>
				<%= attachment_image_tag @book.user, :profile_image, fallback:"no_image.jpg" %>
				<h3>name</h3><p><%= @book.user.name %></p>
				<h3>introduction</h3><p><%= @book.user.introduction %></p>
			<%= link_to "edit", user_path(current_user.id) %>
			<%= render 'books/list', book: @book_new %>
		</div>
		<div class="col-xs-9">
			<table class="table table-striped">
				<colgroup span="3"></colgroup>
				<thead>
				</thead>
					<tr>
						<h4>Book detail</h4>
						<td><%= link_to user_path(current_user.id) do %>
								<%= attachment_image_tag current_user,  :profile_image, fallback: "no_image.jpg" %>
								<%=  current_user.name %>
							<% end %>
						</td>
						<td><%= link_to book_path(@book.id) do %>
							<%= @book.title %>
							<% end %>
						</td>
						<td><%= @book.body %></td>
					<% if @book.user == current_user %>
						<td><%= link_to "Edit", edit_book_path(@book.id) %></td>
						<td><%= link_to "Destroy", book_path(@book.id), method: :delete,"data-confirm" => "本当に消しますか" %></td>
					<% end %>
					</tr>
			</table>
		</div>
	</div>
</div>



